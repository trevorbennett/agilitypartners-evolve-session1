<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<%= form_tag({}, method: :get) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search' %>
<% end %>
<br/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @searched_employees.each do |employee| %>
      <div class="row">
        <tr>
          <td class="col-2"><%= employee.name %></td>
          <td class="col-2"><%= employee.company.name %></td>
          <td class="btn btn-primary"><%= link_to 'Show', employee, {:style=>'color:#000000;', :class => "css_class"}  %></td>
          <td class="btn btn-secondary"><%= link_to 'Edit', edit_employee_path(employee), {:style=>'color:#000000;', :class => "css_class"}  %></td>
          <td class="btn btn-danger"><%= link_to 'Destroy', employee, method: :delete , style: 'color:#000000;', class: 'css_class', data: { confirm: 'Are you sure?', :style=>'color:#000000;', :class => "css_class"} %></td>
        </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path %>
